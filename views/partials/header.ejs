<style>
    /* âœ… Restrict font to only navbar elements */
    .navbar, .navbar-brand, .nav-link {
        font-family: "Bilbo Swash Caps", cursive !important;
        font-weight: 700 !important;
    }

    /* Navbar Brand - RAWAD (Fully Capitalized) */
    .navbar-brand {
        font-size: 2.5rem;
        color: #222;
        letter-spacing: 2px;
        text-transform: uppercase;
    }

    /* Navbar Link Styling - Title Case (Home, Projects, About, Contact) */
    .nav-link {
        font-size: 1.4rem;
        color: #222;
        padding: 10px 20px;
        transition: all 0.3s ease-in-out;
        letter-spacing: 1px;
        text-transform: capitalize; /* Keeps "Home" instead of "HOME" */
        display: block;
    }

    /* Black Box Hover Effect */
    .nav-hover {
        position: relative;
        display: inline-block;
        padding: 10px 20px;
    }

    .nav-hover::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: black;
        transform: scaleX(0);
        transform-origin: left;
        transition: transform 0.3s ease-in-out;
        z-index: -1;
        border-radius: 5px;
    }

    /* Hover Effect */
    .nav-hover:hover::before {
        transform: scaleX(1);
    }

    .nav-hover:hover {
        color: white;
    }

    /* Fix for Mobile Users (Ensuring Proper Click Effect) */
    @media (max-width: 992px) {
        .nav-hover {
            display: block;
            width: 100%;
            text-align: center;
        }

        .nav-hover::before {
            transform: scaleX(1);
            border-radius: 0;
        }
    }

    /* Navbar Background */
    .navbar {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .navbar-brand:hover {
        color: #007bff;
        transition: color 0.3s ease-in-out;
    }
</style>
