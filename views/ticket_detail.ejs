<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Ticket #<%= ticket.id %> - <%= ticket.title %></title>
  <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@300;400;500;700&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="/css/dark-theme.css" />
  <style>
    .wrap { max-width: 1100px; margin: 2rem auto; padding: 0 1rem; }
    .header { display:flex; justify-content: space-between; align-items:center; margin-bottom: 1rem; }
    .subtitle { color: var(--text-secondary); }
    .grid { display:grid; grid-template-columns: 2fr 1fr; gap:1rem; align-items:start; }
    .tile { background: var(--bg-secondary); border:1px solid var(--bg-tertiary); border-radius: 10px; padding: 1rem; }
    .activity-item { border-bottom:1px dashed var(--bg-tertiary); padding:.5rem 0; font-size:.95rem; color: var(--text-secondary); }
    .comment { border:1px solid var(--bg-tertiary); border-radius: 8px; padding:.75rem; margin:.5rem 0; background: var(--bg-tertiary); }
    .comment .meta { font-size:.85rem; color: var(--text-secondary); margin-bottom:.25rem; }
    .form { display:grid; gap:.5rem; }
    .btn-sm { padding:.5rem 1rem; border:1px solid var(--accent-primary); color: var(--accent-primary); background:transparent; cursor:pointer; border-radius:6px; }
    .btn-sm:hover { background: var(--gradient-1); color: var(--bg-primary); border-color: transparent; }
    input, textarea, select { background: var(--bg-tertiary); color: var(--text-primary); border:1px solid var(--bg-tertiary); border-radius:6px; padding:.5rem .75rem; font-family: inherit; }
    textarea { resize: vertical; min-height: 120px; }
  </style>
</head>
<body>
  <div class="bubble-container" id="bubbleContainer"></div>
  <div class="glow-border"></div>
  <div class="glow-border-left"></div>
  <div class="glow-border-right"></div>

  <% include('partials/nav', { isFiancee: true }) %>
  <div class="wrap">
    <div class="header">
      <div>
        <h1 class="hero-title">Ticket #<%= ticket.id %>: <%= ticket.title %></h1>
        <div class="subtitle">Column: <%= ticket.column_name || 'Unknown' %> · Priority: <%= ticket.priority %></div>
      </div>
      <div class="controls">
        <a class="btn btn-sm" href="/admin/kanban">Back to Board</a>
      </div>
    </div>

    <div class="grid">
      <div class="tile">
        <h3>Description</h3>
        <p><%= ticket.description || 'No description provided.' %></p>

        <h3 style="margin-top:1rem;">Activity</h3>
        <div>
          <% if (activity.length === 0) { %>
            <div class="activity-item">No activity yet.</div>
          <% } %>
          <% activity.forEach(function(a){ %>
            <div class="activity-item">[<%= new Date(a.created_at).toLocaleString() %>] <%= a.type %> — <%= a.details %></div>
          <% }) %>
        </div>
      </div>

      <div class="tile">
        <h3>Comments</h3>
        <div>
          <% if (comments.length === 0) { %>
            <div class="comment">
              <div class="meta">No comments yet</div>
            </div>
          <% } %>
          <% comments.forEach(function(c){ %>
            <div class="comment">
              <div class="meta"><strong><%= c.author || 'User' %></strong> on <%= new Date(c.created_at).toLocaleString() %></div>
              <div><%= c.content %></div>
            </div>
          <% }) %>
        </div>

        <form class="form" id="commentForm">
          <textarea name="content" placeholder="Add a comment..." required></textarea>
          <button type="submit" class="btn-sm">Add Comment</button>
        </form>
      </div>
    </div>
  </div>

  <script>
    // bubbles
    function createBubble() {
      const bubble = document.createElement('div');
      bubble.className = 'bubble';
      const size = Math.random() * 100 + 50;
      bubble.style.width = size + 'px';
      bubble.style.height = size + 'px';
      bubble.style.left = Math.random() * window.innerWidth + 'px';
      bubble.style.animationDuration = (Math.random() * 20 + 10) + 's';
      bubble.style.animationDelay = Math.random() * 5 + 's';
      document.getElementById('bubbleContainer').appendChild(bubble);
      setTimeout(() => bubble.remove(), 30000);
    }
    setInterval(createBubble, 2000);
    for (let i = 0; i < 5; i++) setTimeout(createBubble, i * 500);

    // comment form
    document.getElementById('commentForm').addEventListener('submit', async (e)=>{
      e.preventDefault();
      const textarea = e.target.querySelector('textarea[name="content"]');
      const content = textarea.value.trim();
      if (!content) return;
      try {
        const res = await fetch('/api/kanban/tickets/<%= ticket.id %>/comments', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ content })
        });
        if (!res.ok) throw new Error('Failed to add comment');
        location.reload();
      } catch (err) {
        alert('Could not add comment.');
        console.error(err);
      }
    });
  </script>
</body>
</html>

