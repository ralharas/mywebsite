<%- include('partials/header') %>
<div class="container mt-5">
    <h1 class="text-center mb-4">Edit Project</h1>
    <form action="/admin/edit/<%= project.id %>" method="POST" enctype="multipart/form-data" class="p-4 bg-light shadow rounded">
        <input type="hidden" name="existing_background_img" value="<%= project.background_img %>">
        <input type="hidden" name="existing_img2" value="<%= project.img2 %>">
        <input type="hidden" name="existing_img3" value="<%= project.img3 %>">
        <input type="hidden" name="existing_img4" value="<%= project.img4 %>">

        <div class="mb-3">
            <label for="title" class="form-label fw-bold">Project Title</label>
            <input type="text" class="form-control" id="title" name="title" value="<%= project.title %>" required>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label fw-bold">Description</label>
            <textarea class="form-control" id="description" name="description" rows="3" required><%= project.description %></textarea>
        </div>

        <div class="mb-3">
            <label for="github_link" class="form-label fw-bold">GitHub Link</label>
            <input type="url" class="form-control" id="github_link" name="github_link" value="<%= project.github_link %>">
        </div>

        <div class="mb-3">
            <label for="live_demo" class="form-label fw-bold">Live Demo</label>
            <input type="url" class="form-control" id="live_demo" name="live_demo" value="<%= project.live_demo %>">
        </div>

        <div class="mb-3">
            <label for="video_url" class="form-label fw-bold">Video URL</label>
            <input type="url" class="form-control" id="video_url" name="video_url" value="<%= project.video_url %>">
        </div>

        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label fw-bold">Background Image</label>
                <input type="file" class="form-control" id="background_img" name="background_img">
                <div class="mt-2">
                    <img src="<%= project.background_img %>" class="img-thumbnail" width="150">
                </div>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-bold">Image 2</label>
                <input type="file" class="form-control" id="img2" name="img2">
                <div class="mt-2">
                    <img src="<%= project.img2 %>" class="img-thumbnail" width="150">
                </div>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-bold">Image 3</label>
                <input type="file" class="form-control" id="img3" name="img3">
                <div class="mt-2">
                    <img src="<%= project.img3 %>" class="img-thumbnail" width="150">
                </div>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-bold">Image 4</label>
                <input type="file" class="form-control" id="img4" name="img4">
                <div class="mt-2">
                    <img src="<%= project.img4 %>" class="img-thumbnail" width="150">
                </div>
            </div>
        </div>

        <hr class="my-4">

        <h4 class="mb-3">Walkthrough Steps</h4>
        <div class="mb-3">
            <label for="walkthrough_step1" class="form-label">Step 1</label>
            <input type="text" class="form-control" id="walkthrough_step1" name="walkthrough_step1" value="<%= project.walkthrough_step1 %>">
        </div>

        <div class="mb-3">
            <label for="walkthrough_step2" class="form-label">Step 2</label>
            <input type="text" class="form-control" id="walkthrough_step2" name="walkthrough_step2" value="<%= project.walkthrough_step2 %>">
        </div>

        <div class="mb-3">
            <label for="walkthrough_step3" class="form-label">Step 3</label>
            <input type="text" class="form-control" id="walkthrough_step3" name="walkthrough_step3" value="<%= project.walkthrough_step3 %>">
        </div>

        <div class="d-grid">
            <button type="submit" class="btn btn-primary btn-lg">Update Project</button>
        </div>
    </form>
</div>
<%- include('partials/footer') %>
