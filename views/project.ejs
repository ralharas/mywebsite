<%- include('partials/header') %>
<link rel="stylesheet" href="/css/project.css">

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <!-- Project Title -->
            <h1 class="fw-bold"><%= project.title %></h1>
            
            <!-- Project Description -->
            <p class="lead"><%- project.description.replace(/\n/g, '<br>') %></p>
        </div>
    </div>

    <!-- Video (if available, it appears AFTER description) -->
    <% if (project.video_url) { %>
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="video-container">
                <video class="d-block w-100" controls>
                    <source src="<%= project.video_url %>" type="video/mp4">
                    Your browser does not support the video tag.
                </video>
            </div>
        </div>
    </div>
    <% } %>

    <!-- Project Carousel -->
    <div class="row mt-5">
        <div class="col-md-12">
            <div id="projectCarousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    
                    <!-- Background Image (if available) -->
                    <% if (project.background_img) { %>
                    <div class="carousel-item active">
                        <img src="<%= project.background_img %>" class="d-block w-100" alt="Project Background">
                    </div>
                    <% } %>
                    
                    <!-- Additional Images -->
                    <% if (project.img2) { %>
                    <div class="carousel-item">
                        <img src="<%= project.img2 %>" class="d-block w-100" alt="Project Image 2">
                    </div>
                    <% } %>
                    <% if (project.img3) { %>
                    <div class="carousel-item">
                        <img src="<%= project.img3 %>" class="d-block w-100" alt="Project Image 3">
                    </div>
                    <% } %>
                    <% if (project.img4) { %>
                    <div class="carousel-item">
                        <img src="<%= project.img4 %>" class="d-block w-100" alt="Project Image 4">
                    </div>
                    <% } %>
                </div>

                <!-- Carousel Navigation -->
                <a class="carousel-control-prev" href="#projectCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#projectCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>            
        </div>
    </div>

    <!-- Walkthrough Steps -->
    <div class="row mt-5">
        <div class="col-md-12">
            <h3>Walkthrough</h3>
            <ul class="list-group">
                <% if (project.walkthrough_step1) { %>
                <li class="list-group-item"><strong>Step 1:</strong> <%= project.walkthrough_step1 %></li>
                <% } %>
                <% if (project.walkthrough_step2) { %>
                <li class="list-group-item"><strong>Step 2:</strong> <%= project.walkthrough_step2 %></li>
                <% } %>
                <% if (project.walkthrough_step3) { %>
                <li class="list-group-item"><strong>Step 3:</strong> <%= project.walkthrough_step3 %></li>
                <% } %>
            </ul>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script>
$(document).ready(function () {
    $('.clickable-image[data-slide-to="0"]').addClass('selected-image');
    $('#projectCarousel').on('slide.bs.carousel', function (e) {
        $('.clickable-image').removeClass('selected-image');
        $('.clickable-image[data-slide-to="' + $(e.relatedTarget).index() + '"]').addClass('selected-image');
    });
});
</script>

<%- include('partials/footer') %>
