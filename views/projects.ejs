<%- include('partials/header') %>
<link rel="stylesheet" href="/css/projects.css">

<div class="container mt-5">
    <% projects.forEach((project, index) => { %>
        <div class="about-section <%= index % 2 !== 0 ? 'reverse' : '' %>">
            <div class="about-image">
                <img src="<%= project.background_img %>" alt="<%= project.title %>" loading="lazy">
            </div>
            <div class="about-text">
                <h2><%= project.title %></h2>
                <p><%= project.description %></p>
                <a href="/projects/<%= project.id %>" class="btn btn-primary mt-3">View Project</a>
            </div>
        </div>
    <% }) %>
</div>

<!-- Import GSAP for animations -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>
<script type="module">
    import { animateProjectsPage } from '/scripts/animations.js';
    animateProjectsPage();  // Trigger the animation function for projects
</script>

<%- include('partials/footer') %>
