<%- include('partials/header') %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Add Project</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
    <div class="container mt-5">
        <h1>Add New Project</h1>
        <form action="/admin" method="POST">
            <div class="form-group">
                <label for="title">Project Title</label>
                <input type="text" class="form-control" id="title" name="title" required>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea class="form-control" id="description" name="description" rows="3" required></textarea>
            </div>
            <div class="form-group">
                <label for="github_link">GitHub Link</label>
                <input type="url" class="form-control" id="github_link" name="github_link">
            </div>
            <div class="form-group">
                <label for="live_demo">Live Demo Link</label>
                <input type="url" class="form-control" id="live_demo" name="live_demo">
            </div>
            
            <div class="form-group">
                <label for="video_url">Video URL (from S3 or another host)</label>
                <input type="url" class="form-control" id="video_url" name="video_url">
            </div>

            <div class="form-group">
                <label for="background_img">Background Image URL</label>
                <input type="url" class="form-control" id="background_img" name="background_img" required>
            </div>
            <div class="form-group">
                <label for="img2">Image 2 URL</label>
                <input type="url" class="form-control" id="img2" name="img2">
            </div>
            <div class="form-group">
                <label for="img3">Image 3 URL</label>
                <input type="url" class="form-control" id="img3" name="img3">
            </div>
            <div class="form-group">
                <label for="img4">Image 4 URL</label>
                <input type="url" class="form-control" id="img4" name="img4">
            </div>

            <div class="form-group">
                <label for="walkthrough_step1">Walkthrough Step 1</label>
                <input type="text" class="form-control" id="walkthrough_step1" name="walkthrough_step1">
            </div>
            <div class="form-group">
                <label for="walkthrough_step2">Walkthrough Step 2</label>
                <input type="text" class="form-control" id="walkthrough_step2" name="walkthrough_step2">
            </div>
            <div class="form-group">
                <label for="walkthrough_step3">Walkthrough Step 3</label>
                <input type="text" class="form-control" id="walkthrough_step3" name="walkthrough_step3">
            </div>
            <button type="submit" class="btn btn-primary">Add Project</button>
        </form>
    </div>
</body>
</html>
<%- include('partials/footer') %>
