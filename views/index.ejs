<%- include('partials/header') %>
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="/css/global.css">
<link rel="stylesheet" href="/css/index.css">

<!-- Google Fonts for Styling -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Bilbo+Swash+Caps&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">

<div class="container text-center mt-5">
    <!-- Centered Animated Heading -->
    <h1 href="/" class="hero-heading">Hello, I'm Rawad.</h1>
</div>

<div class="container mt-5">
    <!-- About Me Section: Image on the Left -->
    <div class="about-section">
        <div class="about-image">
            <a href="/about">
            <img src="/img/about.jpg" alt="About Me" class="rounded-circle img-fluid">
        </a>
        </div>
        <div class="about-text">
            <h2>About Me</h2>
            <p>
                A 3rd-year Computer Science and Political Science student at Western University, 
                I've transitioned from web development to exploring both Data Science and AI. My work with 
                companies like ADA Analytics and Maskwa Gourmet Foods honed my skills in backend development 
                and data management. Starting May 2025, I'll be a Data Developer intern at Celestica, working 
                closely with Oracle and Power BI to merge data-driven solutions with AI technologies.
            </p>
            <a href="/about" class="btn btn-primary mt-3">View More</a>
        </div>
    </div>

    <!-- Projects Separator -->
    <div class="projects-heading-container">
        <h2 class="projects-heading">Projects</h2>
    </div>

    <!-- Projects Section: Start with Image on the Right -->
    <% projects.forEach((project, index) => { %>
        <div class="about-section <%= index % 2 === 0 ? 'reverse' : '' %>">
            <div class="about-image">
                <a href="/projects/<%= project.id %>"> <!-- Corrected placement of <a> tag -->
                    <img src="<%= project.background_img %>" alt="<%= project.title %>" class="rounded-circle img-fluid">
                </a> 
            </div>
            <div class="about-text">
                <h2><%= project.title %></h2>
                <p><%= project.description %></p>
                <a href="/projects/<%= project.id %>" class="btn btn-primary mt-3">View Project</a>
            </div>
        </div>
    <% }) %>
</div>

<!-- Import GSAP and Custom Animations -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>

<script type="module">
    import { animateHeroHeading, animateSections, animateProjectsHeading } from '/scripts/animations.js';

    animateHeroHeading();        
    animateSections();           
    animateProjectsHeading();    
</script>


<%- include('partials/footer') %>
