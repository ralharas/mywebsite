<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rawan's Board</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/dark-theme.css">
    <link rel="stylesheet" href="/css/kanban.css">
</head>
<body>
    <!-- Animated Bubbles Background -->
    <div class="bubble-container" id="bubbleContainer"></div>

    <!-- Animated Border Glow -->
    <div class="glow-border"></div>
    <div class="glow-border-left"></div>
    <div class="glow-border-right"></div>

    <% include('partials/nav', { isFiancee: true }) %>
    <div class="main-container">
        <div class="kanban-container">
            <div class="kanban-header">
                <h1 class="kanban-title">Rawan's Board</h1>
                <div>
                    <button class="btn" onclick="openTicketForm()">Submit Ticket</button>
                    <a href="<%= typeof backUrl !== 'undefined' ? backUrl : '/admin' %>" class="btn">Back to Dashboard</a>
                </div>
            </div>
            <div class="kanban-board" id="kanbanBoard"></div>
            <div class="add-column-btn" onclick="addColumn()">+ Add Column</div>
        </div>
    </div>

    <!-- Ticket Form Modal -->
    <div class="modal" id="ticketFormModal">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Submit a Ticket</h2>
                <button class="modal-close" onclick="closeTicketForm()">&times;</button>
            </div>
            <form id="ticketForm">
                <div class="form-group">
                    <label for="ticketTitle" class="form-label">Title</label>
                    <input type="text" id="ticketTitle" name="title" class="form-input" required>
                </div>
                <div class="form-group">
                    <label for="ticketDescription" class="form-label">Description</label>
                    <textarea id="ticketDescription" name="description" class="form-textarea" rows="4"></textarea>
                </div>
                <div class="form-group">
                    <label for="ticketPriority" class="form-label">Priority</label>
                    <select id="ticketPriority" name="priority" class="form-input">
                        <option value="low">Low</option>
                        <option value="medium">Medium</option>
                        <option value="high">High</option>
                        <option value="urgent">Urgent</option>
                    </select>
                </div>
                <button type="submit" class="btn">Submit</button>
            </form>
        </div>
    </div>

    <!-- Scripts -->
    <script src="/js/kanban.js"></script>

</body>
</html>
